
config aria2 'main'
	option bt_enable_lpd 'true'
	option enable_dht 'true'
	option follow_torrent 'true'
	option enable_log 'true'
	option max_concurrent_downloads '99'
	option user 'root'
	option dir '/mnt/sda1/aria2'
	option file_allocation 'falloc'
	option save_session_interval '1'
	option enable_proxy '0'
	option enable_dht6 'false'
	option enable_peer_exchange 'true'
	option bt_remove_unselected_file 'true'
	option disable_ipv6 'true'
	option disk_cache '128M'
	option http_accept_gzip 'true'
	option check_certificate 'false'
	option connect_timeout '30'
	option max_connection_per_server '128'
	option split '128'
	option enable_logging '1'
	option log_level 'warn'
	option max_overall_upload_limit '500K'
	option enabled '0'
	option config_dir '/etc/aria2'
	list extra_settings 'dht-file-path=/usr/share/aria2/dht.dat'
	list extra_settings 'bt-request-peer-speed-limit=100M'
	option min_split_size '100K'

